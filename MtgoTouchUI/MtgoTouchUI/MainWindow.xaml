<Window x:Class="MtgoTouchUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MtgoTouchUI" Height="300" Width="150" WindowStyle="None" Topmost="True"
        Loaded="MainWindow_OnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid Row="0">
            <Button Content="OK, Yes" Click="ButtonBase1_OnClick"></Button>
        </Grid>
        <Grid Row="1">
            <Button Content="Yield EoT" Click="ButtonBase2_OnClick"></Button>
        </Grid>
        <Grid Row="2">
            <Button Content="No, Cancel, Undo" Click="ButtonBase3_OnClick"></Button>
        </Grid>
    </Grid>
</Window>
